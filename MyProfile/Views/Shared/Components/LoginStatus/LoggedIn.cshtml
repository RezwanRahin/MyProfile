@model ApplicationUser

<div class="dropdown">
    <a class="nav-item nav-link dropdown-toggle" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown"
        area-expanded="false">@Model.UserName</a>
    <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
        <li><a class="dropdown-item" asp-controller="Account" asp-action="Details"
                asp-route-username="@Model.UserName">Profile</a></li>
        @* <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Log Out</a></li> *@
        <li>
            <form method="post" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="dropdown-item">Logout</button>
            </form>
        </li>
    </ul>
</div>