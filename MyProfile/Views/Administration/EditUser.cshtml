@model EditUserViewModel

@{
	ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
	<div class="form-floating mt-3 mb-3">
		<div class="form-floating mt-3 mb-3">
			<input asp-for="Id" disabled class="form-control" />
			<label asp-for="Id"></label>
		</div>
		<div class="form-floating mt-3 mb-3">
			<input asp-for="FirstName" class="form-control" />
			<label asp-for="FirstName"></label>
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="form-floating mt-3 mb-3">
			<input asp-for="LastName" class="form-control" />
			<label asp-for="LastName"></label>
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
		<div class="form-floating mt-3 mb-3">
			<input asp-for="Email" class="form-control" />
			<label asp-for="Email"></label>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-floating mt-3 mb-3">
			<input asp-for="UserName" class="form-control" />
			<label asp-for="UserName"></label>
			<span asp-validation-for="UserName" class="text-danger"></span>
		</div>
		<div class="form-floating mt-3 mb-3">
			<input asp-for="Gender" class="form-control" />
			<label asp-for="Gender"></label>
			<span asp-validation-for="Gender" class="text-danger"></span>
		</div>
		<div class="form-floating mt-3 mb-3">
			<input asp-for="DOB" class="form-control" />
			<label asp-for="DOB"></label>
			<span asp-validation-for="DOB" class="text-danger"></span>
		</div>
	</div>

	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group row" style="margin-bottom: 1rem">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary">Update</button>
			<a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
		</div>
	</div>

	<div class="card">
		<div class="card-header">
			<h3>User Roles</h3>
		</div>
		<div class="card-body">
			@if (!Model.Roles.Any())
			{
				<h5 class="card-title">None at the moment</h5>
			}
			else
			{
				foreach (var role in Model.Roles)
				{
					<h5 class="card-title">@role</h5>
				}
			}
		</div>
		<div class="card-footer">
			<a asp-action="" asp-route-userId="@Model.Id" style="width: auto" class="btn btn-primary">Manage Roles</a>
		</div>
	</div>

	@* <div class="card mt-3">
		<div class="card-header">
			<h3>User Claims</h3>
		</div>
		<div class="card-body">
			@if (Model.Claims.Any())
			{
				<h5 class="card-title">None at the moment</h5>
			}
			else
			{
				foreach (var claim in Model.Claims)
				{
					<h5 class="card-title">@claim</h5>
				}
			}
		</div>
		<div class="card-footer">
			<a asp-action="" asp-route-userId="@Model.Id" style="width: auto" class="btn btn-primary">Manage Claims</a>
		</div>
	</div> *@
</form>

@section Scripts
	{
	<partial name="_ValidationScriptsPartial" />
}